# JeJe WebOS Docker 环境变量配置
# 复制此文件为 .env 并修改配置

# ==================== 应用配置 ====================
APP_NAME=JeJe WebOS
APP_VERSION=1.0.0
DEBUG=false

# ==================== 端口配置 ====================
BACKEND_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443
MYSQL_PORT=3306
REDIS_PORT=6379

# ==================== 数据库配置 ====================
DB_NAME=jeje_webos
DB_USER=jeje
DB_PASSWORD=jeje_password_change_me
MYSQL_ROOT_PASSWORD=root_password_change_me

# ==================== Redis 配置 ====================
REDIS_PASSWORD=

# ==================== JWT 配置 ====================
# 生产环境必须修改此密钥！
JWT_SECRET=change_this_secret_key_in_production_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# ==================== 默认管理员账户 ====================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123
ADMIN_PHONE=13800138000
ADMIN_NICKNAME=系统管理员

# ==================== 文件存储 ====================
MAX_UPLOAD_SIZE=104857600

# ==================== 审计日志 ====================
AUDIT_ALL_OPERATIONS=true

